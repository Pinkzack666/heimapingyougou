/* pages/goods_detail/goods_datail.wxss */
page {
  padding-bottom: 90rpx;
}
.datail_swiper swiper {
  height: 65vw;
  text-align: center;
}
.datail_swiper swiper image {
  width: 60%;
}
.goods_price {
  padding: 15rpx;
  font-size: 48rpx;
  font-weight: 600;
  color: var(--themeColor);
}
.goods_name_row {
  display: flex;
  padding: 10rpx 0;
  border-bottom: 20rpx solid #dedede;
}
.goods_name_row .goods_name {
  flex: 5;
  color: #000000;
  font-size: 30rpx;
  padding: 0 10rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_name_row .goods_collect {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 1rpx solid #c4c4c4;
}
.goods_name_row .goods_collect .iconfont {
  font-size: 36rpx;
}
.goods_name_row .goods_collect .icon-shoucang1 {
  color: orange;
}
.goods_name_row .goods_collect .collect_text {
  font-size: 26rpx;
}
.goods_info .goods_info_title {
  font-size: 32rpx;
  color: var(--themeColor);
  font-weight: 600;
  padding: 20rpx;
}
.btm_tool {
  border-top: 1rpx solid #c4c4c4;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #ffffff;
  display: flex;
}
.btm_tool .tool_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  position: relative;
}
.btm_tool .tool_item button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.btm_tool .btn_cart {
  flex: 2;
  color: #ffffff;
  background-color: #ffa500;
  font-size: 30rpx;
  font-weight: 600;
}
.btm_tool .btn_buy {
  flex: 2;
  color: #ffffff;
  background-color: #eb4450;
  font-size: 30rpx;
  font-weight: 600;
}
